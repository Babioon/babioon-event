			<option value="20">20</option>
			<option value="21">21</option>
			<option value="22">22</option>
			<option value="23">23</option>
		</field>

		<field name="etimemm" type="list"
			label="COM_BABIOONEVENT_ETIME_MM" description="COM_BABIOONEVENT_ETIME_MM_DESC"
			class="input-mini" size="1" default="" >
			<option value="--">--</option>
			<option value="00">0</option>
			<option value="05">5</option>
			<option value="10">10</option>
			<option value="11">11</option>
			<option value="15">15</option>
			<option value="20">20</option>
			<option value="25">25</option>
			<option value="30">30</option>
			<option value="35">35</option>
			<option value="40">40</option>
			<option value="45">45</option>
			<option value="50">50</option>
			<option value="55">55</option>
		</field>

		<field name="contact" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_CONTACT"
			description="COM_BABIOONEVENT_CONTACT_DESC" required="false"/>

		<field name="email" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_EMAIL"
			description="COM_BABIOONEVENT_EMAIL_DESC" required="false"/>

		<field name="showemail" type="checkbox" label="COM_BABIOONEVENT_SHOWEMAIL"
			labelClass="control-label"
			description="COM_BABIOONEVENT_SHOWEMAIL_DESC" value="1" />

		<field name="tel" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_TEL"
			description="COM_BABIOONEVENT_TEL_DESC" required="false"/>

		<field name="website" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_WEBSITE"
			description="COM_BABIOONEVENT_WEBSITE_DESC" required="false"/>

		<field name="address" type="textarea" default="" label="COM_BABIOONEVENT_ADDRESS"
			labelClass="control-label"
			description="COM_BABIOONEVENT_ADDRESS_DESC" rows="5" cols="30" />

		<field name="ainfo" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_AINFO"
			description="COM_BABIOONEVENT_AINFO_DESC" required="false"/>

		<field name="street" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_STREET"
			description="COM_BABIOONEVENT_STREET_DESC" required="false"/>

		<field name="pcode" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_PCODE"
			description="COM_BABIOONEVENT_PCODE_DESC" required="false"/>

		<field name="city" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_CITY"
			description="COM_BABIOONEVENT_CITY_DESC" required="false"/>

		<field name="state" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_STATE"
			description="COM_BABIOONEVENT_STATE_DESC" required="false"/>

		<field name="country" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_COUNTRY"
			description="COM_BABIOONEVENT_COUNTRY_DESC" required="false"/>

		<field name="teaser" type="editor" filter="safehtml" labelClass="control-label"
			label="COM_BABIOONEVENT_TEASER" description="COM_BABIOONEVENT_TEASER_DESC"
			buttons="false" rows="5" cols="30" />

		<field name="text" type="editor" filter="safehtml" labelClass="control-label"
			label="COM_BABIOONEVENT_TEXT" description="COM_BABIOONEVENT_TEXT_DESC"
			buttons="false" rows="5" cols="30" />

		<field name="isfreeofcharge" type="radio" label="COM_BABIOONEVENT_ISFREEOFCHARGE"
			labelClass="control-label" value="1" default="1"
			description="COM_BABIOONEVENT_ISFREEOFCHARGE_DESC">
			<option value="0">COM_BABIOONEVENT_NOFREEOFCHARGE</option>
			<option value="1">COM_BABIOONEVENT_YESFREEOFCHARGE</option>
		</field>

		<field name="charge" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_CHARGE"
			description="COM_BABIOONEVENT_CHARGE_DESC" required="false"/>

		<field name="catid" type="category" extension="com_babioonevent" required="true"
			labelClass="control-label" label="COM_BABIOONEVENT_CATID"
			 description="COM_BABIOONEVENT_CATID_DESC" />

		<field name="customfield1" type="text" class="inputbox" labelClass="control-label"
			   size="40" label="COM_BABIOONEVENT_CUSTOMFIELD1"
			   description="COM_BABIOONEVENT_CUSTOMFIELD1_DESC" required="false"/>

		<field name="customfield2" type="text" class="inputbox" labelClass="control-label"
			   size="40" label="COM_BABIOONEVENT_CUSTOMFIELD2"
			   description="COM_BABIOONEVENT_CUSTOMFIELD2_DESC" required="false"/>

		<field name="customfield3" type="text" class="inputbox" labelClass="control-label"
			   size="40" label="COM_BABIOONEVENT_CUSTOMFIELD3"
			   description="COM_BABIOONEVENT_CUSTOMFIELD3_DESC" required="false"/>

		<field name="customfield4" type="text" class="inputbox" labelClass="control-label"
			   size="40" label="COM_BABIOONEVENT_CUSTOMFIELD4"
			   description="COM_BABIOONEVENT_CUSTOMFIELD4_DESC" required="false"/>

	</fieldset>

	<fieldset name="infoarea"
		label="COM_BABIOONEVENT_INFOAREA"
		description="COM_BABIOONEVENT_INFOAREA_DESC"
	>

		<field name="geo_b" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_GEO_B" readonly="true"
			description="COM_BABIOONEVENT_GEO_B_DESC" required="false"/>

		<field name="geo_l" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_GEO_L" readonly="true"
			description="COM_BABIOONEVENT_GEO_L_DESC" required="false"/>

		<field name="babioonevent_event_id" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_ID" readonly="true"
			description="COM_BABIOONEVENT_ID_DESC" required="false"/>

	</fieldset>

</form>