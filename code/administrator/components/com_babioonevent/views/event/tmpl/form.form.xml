<?xml version="1.0" encoding="utf-8"?>
<form
    validate="true"
    serverside_validate="true"
	>
	<fieldset name="basic_configuration"
		label="COM_BABIOONEVENT_GROUP_BASIC"
		description="COM_BABIOONEVENT_GROUP_BASIC_DESC"
	>
		<field name="enabled" type="list"
			label="JSTATUS" description="COM_BABIOONEVENT_FIELD_STATE_DESC"
			class="inputbox" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="name" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_NAME"
			description="COM_BABIOONEVENT_NAME_DESC" required="true" />

		<field name="organiser" type="text" class="inputbox" labelClass="control-label"
			size="40" label="COM_BABIOONEVENT_ORGANISER"
			description="COM_BABIOONEVENT_ORGANISER_DESC" required="false"/>

		<field name="sdate" type="babioonevent.calendar" class="inputbox" labelClass="control-label"
			size="12" label="COM_BABIOONEVENT_SDATE" default="" format="dd.mm.yyyy"
			description="COM_BABIOONEVENT_SDATE_DESC" required="false" />

		<field name="stimehh" type="list"
