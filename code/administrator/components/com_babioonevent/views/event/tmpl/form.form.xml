			<option value="40">40</option>
			<option value="45">45</option>
			<option value="50">50</option>
			<option value="55">55</option>
		</field>

		<field name="edate" type="babioonevent.calendar" class="inputbox" labelClass="control-label"
			size="12" label="COM_BABIOONEVENT_EDATE" default="" format="dd.mm.yyyy"
			description="COM_BABIOONEVENT_EDATE_DESC" required="false" />

		<field name="etimehh" type="list"
			label="COM_BABIOONEVENT_ETIME_HH" description="COM_BABIOONEVENT_ETIME_HH_DESC"
			class="input-mini" size="1" default="" >
			<option value="--">--</option>
			<option value="00">0</option>
			<option value="01">1</option>
			<option value="02">2</option>
			<option value="03">3</option>
			<option value="04">4</option>
			<option value="05">5</option>
			<option value="06">6</option>
			<option value="07">7</option>
